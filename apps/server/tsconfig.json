{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2022",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": false,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
