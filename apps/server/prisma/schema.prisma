generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserType {
  guest
  registered
}

model User {
  id        String    @id @default(uuid())
  type      UserType
  username  String?
  email     String?   @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  games     Game[]

  @@index([deletedAt, createdAt])
}

enum LobbyType {
  open
  invite
}

enum GameStatus {
  lobby
  countdown
  active
  finished
}

model Game {
  id              String     @id @default(uuid())
  createdBy       String
  invitedPlayerId String?
  players         Json
  lobbyType       LobbyType
  currentTurn     String
  globalValue     Int
  status          GameStatus
  winner          User?      @relation(fields: [winnerId], references: [id])
  winnerId        String?
  countdown       Int?
  version         Int
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  deletedAt       DateTime?
}
